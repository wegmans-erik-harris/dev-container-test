// .devcontainer/devcontainer.json
{
  "name": "Minimal Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
  "postCreateCommand": "bash -c 'echo \"Setting up MCP configuration...\"; echo \"Creating directory in: $XDG_CONFIG_HOME/.copilot\"; mkdir -p $XDG_CONFIG_HOME/.copilot && cp .devcontainer/mcp.json $XDG_CONFIG_HOME/.copilot/mcp-config.json && dos2unix $XDG_CONFIG_HOME/.copilot/mcp-config.json; echo \"MCP setup complete!\"'"
}
