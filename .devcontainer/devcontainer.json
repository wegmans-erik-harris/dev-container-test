// .devcontainer/devcontainer.json
{
  "name": "Minimal Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
  "postCreateCommand": "bash -c 'echo \"Setting up MCP scripts...\"; pwd; ls -l .devcontainer; echo \"Contents of .devcontainer/mcp.json before copy:\"; cat .devcontainer/mcp.json; sudo cp .devcontainer/start-mcp-servers.sh /usr/local/bin/start-mcp-servers.sh && sudo cp .devcontainer/mcp.json /usr/local/bin/mcp.json && sudo cp .devcontainer/docker-troubleshoot.sh /usr/local/bin/docker-troubleshoot.sh && sudo cp .devcontainer/test-mcp-setup.sh /usr/local/bin/test-mcp-setup.sh && sudo chmod +x /usr/local/bin/*.sh && sudo dos2unix /usr/local/bin/mcp.json; echo \"Contents of /usr/local/bin/mcp.json after copy:\"; cat /usr/local/bin/mcp.json; echo \"Upgrading npm...\"; npm install -g npm; echo \"Installing GitHub Copilot CLI...\"; npm install -g @githubnext/github-copilot-cli; NPM_PREFIX=$(npm config get prefix); NVM_BIN=\"$NPM_PREFIX/bin\"; echo \"Global npm prefix: $NPM_PREFIX\"; echo \"Checking for Copilot binary in $NVM_BIN and $HOME/.nvm/versions/node/*/bin\"; if [ -f \"$NVM_BIN/copilot\" ]; then sudo ln -sf \"$NVM_BIN/copilot\" /usr/local/bin/copilot; elif [ -f \"$HOME/.nvm/versions/node/$(node --version)/bin/copilot\" ]; then sudo ln -sf \"$HOME/.nvm/versions/node/$(node --version)/bin/copilot\" /usr/local/bin/copilot; else COPILOT_PATH=$(find $HOME/.nvm/versions/node/ -name copilot -type f | head -n 1); if [ -n \"$COPILOT_PATH\" ]; then sudo ln -sf \"$COPILOT_PATH\" /usr/local/bin/copilot; else echo \"Copilot binary not found in nvm directories\"; fi; fi; export PATH=\"$NVM_BIN:$PATH\"; echo \"Copilot CLI version:\"; copilot --version || echo \"Copilot CLI not found in PATH\"; echo \"Setup complete!\"'",
  "postStartCommand": "/usr/local/bin/start-mcp-servers.sh",
  "containerEnv": {
    "MCP_CONFIG_PATH": "/usr/local/bin/mcp.json"
  }
}
